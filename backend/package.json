{
  "name": "advancia-pay-ledger-backend",
  "version": "2.0.0",
  "description": "Enterprise Fintech Backend - AI Automation & Transaction Processing",
  "main": "src/index.ts",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "admin": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/admin-server.ts",
    "dev:prod": "cross-env NODE_ENV=production ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc && prisma generate",
    "start": "node dist/index.js",
    "start:dev": "cross-env NODE_ENV=development node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production node dist/index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand --forceExit",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:dev": "cross-env NODE_ENV=development jest --runInBand --forceExit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:reset": "prisma migrate reset --force",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "env:check": "node -e \"console.log('NODE_ENV:', process.env.NODE_ENV)\"",
    "hardhat:node": "hardhat node",
    "hardhat:accounts": "hardhat accounts",
    "hardhat:compile": "hardhat compile"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^7.119.0",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.6.0",
    "speakeasy": "^2.0.0",
    "stripe": "^14.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "hardhat": "^2.19.2",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}